@model MeePoint.Models.Group

@{
    ViewData["Title"] = "Create";
}


<div class="card card-default">
	<div class="card-header">
		<h3 class="card-title">Adicionar Grupo</h3>

		<div class="card-tools">
			<button type="button" class="btn btn-tool" data-card-widget="collapse">
				<i class="fas fa-minus"></i>
			</button>
			<button type="button" class="btn btn-tool" data-card-widget="remove">
				<i class="fas fa-times"></i>
			</button>
		</div>
	</div>
	<!-- /.card-header -->
	<div class="card-body">
		<div class="row">
			<div class="col-12 col-sm-6">
				<label>Nome do Grupo</label>
				<input class="form-control"  />
			</div>
		</div>
		<hr />
		<div class="row">

			<div class="col-6 col-sm-3">
				<div class="form-group">
					<label>Responsáveis</label>
					<div class="select2-purple">
						<select class="select2" multiple="multiple" data-placeholder="Select a State" data-dropdown-css-class="select2-purple" style="width: 100%;"  asp-items="@ViewBag.GroupMembers">
							
						</select>
					</div>
				</div>
				<!-- /.form-group -->
			</div>
			<div class="col-6 col-sm-3">
				<div class="form-group">
					<label>Co-responsáveis</label>
					<div class="select2-purple">
						<select class="select2" multiple="multiple" data-placeholder="Select a State" data-dropdown-css-class="select2-purple" style="width: 100%;"  asp-items="@ViewBag.GroupMembers">
							
						</select>
					</div>
				</div>
				
			</div>
		</div>
		
		<div class="row">
			<div class="col-12 col-sm-6">
				<div class="form-group">
					<label>Participantes</label>
					<div class="select2-purple">
						<select class="select2" multiple="multiple" data-placeholder="Select a State" data-dropdown-css-class="select2-purple" style="width: 100%;"  asp-items="@ViewBag.GroupMembers">
							
						</select>
					</div>
				</div>
				<!-- /.form-group -->
			</div>
		</div>

		<!-- /.col -->

	</div>
	
</div>

@section Scripts


{
	<script>
		$(function () {

			$('.select2').select2()
		});
	  </script>
}

